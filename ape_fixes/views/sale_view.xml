<odoo>
    <record id='view_order_form_inherit_fixes' model="ir.ui.view">
        <field name="name">sale.order.view.form.inheirt.ape</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='payment_term_id']" position="after">
                <field name="customer_number" string="Customer Number"/>
            </xpath>
            <xpath expr="//tree//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
