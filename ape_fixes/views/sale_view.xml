<odoo>
    <record id='view_order_form_inherit_fixes' model="ir.ui.view">
        <field name="name">sale.order.view.form.inheirt.ape</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='partner_id']" position="before">
                <field name="customer_number" string="Customer Number"/>
                <field name='sales_agent'/>
            </xpath>
            <xpath expr="//tree//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
             <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="context">{'show_address': 1}</attribute>
                 <attribute name="options">{"always_reload": True, "highlight_first_line": True}</attribute>
            </xpath>
            <field name="partner_shipping_id" position='after'>
                <label for ='delivery_address' invisible="1" string=""/>
                <field name ="delivery_address" invisible="1" nolabel="1"/>
            </field>
        </field>
    </record>
</odoo>
