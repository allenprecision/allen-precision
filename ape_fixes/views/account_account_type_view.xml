<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='account_account_type_form_view_inherit' model="ir.ui.view">
        <field name="name">account.account.type.form.inherit.ape.fixes</field>
        <field name="model">account.account.type</field>
        <field name="inherit_id" ref="account.view_account_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='include_initial_balance']" position="after">
                <field name="is_cogs_type"/>
            </xpath>
        </field>
    </record>

    <record id='account_account_type_tree_view_inherit' model="ir.ui.view">
        <field name="name">account.account.type.tree.inherit.ape.fixes</field>
        <field name="model">account.account.type</field>
        <field name="inherit_id" ref="account.view_account_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_cogs_type" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
