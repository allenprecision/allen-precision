<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inherit_repair_order_report" inherit_id="repair.report_repairorder">
        <xpath expr="//div[@id='informations']/div[1]" position="replace">
            <div id="product_information" t-if="o.product_information" class="col-3 bm-2">
                <strong>Product Information:</strong>
                <p t-field="o.product_information" class="m-0"/>
            </div>
        </xpath>
    </template>
</odoo>
